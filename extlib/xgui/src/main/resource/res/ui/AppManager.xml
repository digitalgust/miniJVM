        sub onload()
            setText("LAB_USERNAME", "{Sign in} >")
        ret

        sub submitSignup()
            loginUid=getText("SIGNUP_UID")
            loginPwd=getText("SIGNUP_PWD")
            if(strlen(loginUid)=0 | strlen(loginPwd)=0)
                showMsg("{Account or password can not be empty}")
            else
                setText("LAB_USERNAME", loginUid)
                setText("LOGIN_VERIFY_UID", loginUid)
                showMsg("{Sign up commited}")
            eif
        ret


        sub verifyCode()

        ret

        sub signIn()
            loginUid=getText("LOGIN_UID")
            loginPwd=getText("LOGIN_PWD")
            if(strlen(loginUid)=0 | strlen(loginPwd)=0)
                showMsg("{Account or password can not be empty}")
            else
                setText("LAB_USERNAME", loginUid)
                setText("LOGIN_VERIFY_UID", loginUid)

                requestApi()
            eif
        ret

        ]]>
    </script>
